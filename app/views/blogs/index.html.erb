<%= render 'shared/navbar' %>
<div>
  <section class="center blue">
    <h1>Blog Post</h1>
  </section>
</div>

<div class="row">
  <div class="small-12 columns medium-12 columns-large-12 columns">
    <% @blogs.each do |blog| %>
      <section class='center'>
        <h2><%= link_to blog.title, blog %></h2>
      </section>
      <section class='center'>
        <strong>Posted on: <%= blog.created_at%></strong>
      </section>
      <section class='panel'>
        <%= truncate(blog.body, length: 500, separator: ' ', :escape => false) %>
        <br>
        <div class="text-center">
          <%= link_to 'Read More', blog, class: 'button button-primary tiny round' %>
        </div>
      </section>

      <% if policy(@blogs).edit? || policy(@blogs).destroy? %>
      <section class="panel center">
        <%= link_to 'Edit',  edit_blog_path(blog), class: 'button button-primary round small white' %>
        <%= link_to 'Destroy', blog,  method: :delete, data: { confirm: 'Are you sure?' },  class: 'button button-alert round small white'%>
      </section>
      <% end %>
    <% end %>
  </div>
</div>
